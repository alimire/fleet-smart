<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_fleet_smart_vehicle_tree" model="ir.ui.view">
            <field name="name">fleet.smart.vehicle.tree</field>
            <field name="model">fleet.smart.vehicle</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="license_plate"/>
                    <field name="model"/>
                    <field name="driver"/>
                    <field name="battery_level"/>
                    <field name="location"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_fleet_smart_vehicle_form" model="ir.ui.view">
            <field name="name">fleet.smart.vehicle.form</field>
            <field name="model">fleet.smart.vehicle</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="license_plate"/>
                                <field name="model"/>
                                <field name="driver"/>
                            </group>
                            <group>
                                <field name="battery_level"/>
                                <field name="location"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_fleet_smart_vehicle" model="ir.actions.act_window">
            <field name="name">Fleet Vehicles</field>
            <field name="res_model">fleet.smart.vehicle</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_fleet_smart_root" name="Fleet Smart" sequence="10"/>
        <menuitem id="menu_fleet_smart_vehicles" name="Vehicles" parent="menu_fleet_smart_root" action="action_fleet_smart_vehicle" sequence="10"/>
    </data>
</odoo>