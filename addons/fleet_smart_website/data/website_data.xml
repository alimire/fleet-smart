<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Website Configuration -->
        <record id="website_fleet_smart" model="website">
            <field name="name">Fleet Smart</field>
            <field name="domain">fleetsmart.tk</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Website Menu -->
        <record id="menu_homepage" model="website.menu">
            <field name="name">Home</field>
            <field name="url">/</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">10</field>
            <field name="website_id" ref="website_fleet_smart"/>
        </record>
        
        <record id="menu_fleet" model="website.menu">
            <field name="name">Fleet</field>
            <field name="url">/fleet</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">20</field>
            <field name="website_id" ref="website_fleet_smart"/>
        </record>
        
        <record id="menu_about" model="website.menu">
            <field name="name">About</field>
            <field name="url">/about</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">30</field>
            <field name="website_id" ref="website_fleet_smart"/>
        </record>
        
        <record id="menu_contact" model="website.menu">
            <field name="name">Contact</field>
            <field name="url">/contact</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">40</field>
            <field name="website_id" ref="website_fleet_smart"/>
        </record>
    </data>
</odoo>